@model PatientDetails.Models.NewPatient
<h3>
    Are you sure you want to delete this?</h3>
<fieldset>
    <legend>NewPatient</legend>
    <div class="display-label">
        Name:</div>
    <div class="display-field">@Model.Name</div>
    <div class="display-label">
        Address:</div>
    <div class="display-field">@Model.Address</div>
    <div class="display-label">
        Contactno:</div>
    <div class="display-field">@Model.Contactno</div>
    <div class="display-label">
        Dob:</div>
    <div class="display-field">@String.Format("{0:g}", Model.Dob)</div>
    <div class="display-label">
        City:</div>
    <div class="display-field">@Model.City</div>
</fieldset>
@using (Html.BeginForm("PatientDelete", "Patient", FormMethod.Post))
{
    <p>
        @Html.HiddenFor(model => model.Id)
        <input type="submit" value="Delete" />
        |
        @Html.ActionLink("Back to List", "Show")
    </p>
}
